<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gch.youxin.com.myzujianhuademo.MainActivity">

    <TextView
        android:id="@+id/tv_read"
        android:background="#4acf65"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="跳转到read"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_marginTop="15sp"
        android:id="@+id/tv_share"
        android:background="#4acf65"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="跳转到share"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_marginTop="15sp"
        android:id="@+id/tv_add_share"
        android:background="#4acf65"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="添加share组件"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_marginTop="15sp"
        android:id="@+id/tv_remove_share"
        android:background="#4acf65"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="卸载share组件"
        android:textColor="#ffffff"/>
    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858585"></View>

</LinearLayout>
